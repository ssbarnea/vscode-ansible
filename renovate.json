{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeStrategy": "squash",
  "commitMessageAction": "update",
  "commitMessageExtra": "",
  "commitMessageTopic": "dependencies",
  "configMigration": true,
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)",
    "schedule:automergeEarlyMondays"
  ],
  "github-actions": {
    "branchTopic": "build",
    "enabled": true,
    "groupName": "actions dependencies",
    "groupSlug": "actions",
    "labels": ["chore", "dependencies"],
    "packageRules": [
      {
        "matchPackageNames": [
          "*",
          "!/ansible/team-devtools/",
          "!/Actions-R-Us/actions-tagger/",
          "!/re-actors/alls-green/"
        ]
      }
    ]
  },
  "labels": ["chore", "dependencies"],
  "lockFileMaintenance": {
    "commitMessageAction": "update",
    "enabled": true,
    "groupName": "dependencies lockfile",
    "groupSlug": "lockfile",
    "rangeStrategy": "replace",
    "rebaseWhen": "behind-base-branch",
    "recreateWhen": "always"
  },
  "minimumReleaseAge": "1 days",
  "packageRules": [
    {
      "groupSlug": "npm-dev",
      "matchDepTypes": ["devDependencies"],
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch", "major"]
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch", "major"]
    },
    {
      "matchPackageNames": ["*"],
      "minimumReleaseAge": "2 days"
    },
    {
      "description": "Disable updates to requires-python field",
      "enabled": false,
      "matchManagers": ["pep621"],
      "matchDepTypes": ["requires-python"]
    },
    {
      "description": "Disable updates to .python_version file",
      "enabled": false,
      "matchFileNames": [".python_version"]
    },
    {
      "description": "Disable updates to Python version in mise config",
      "enabled": false,
      "matchManagers": ["mise"],
      "matchPackageNames": ["python"]
    }
  ],
  "pin": {
    "groupName": "all dependencies"
  },
  "pinDigest": {
    "groupName": "all dependencies"
  },
  "prConcurrentLimit": 5,
  "pre-commit": {
    "branchTopic": "build"
  },
  "rangeStrategy": "replace",
  "recreateWhen": "always",
  "separateMajorMinor": false,
  "separateMinorPatch": false,
  "timezone": "UTC"
}
